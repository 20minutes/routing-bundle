<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="router.chain.class">Symfony\Cmf\Bundle\ChainRoutingBundle\Routing\ChainRouter</parameter>
    </parameters>

    <services>
        <service id="router.chain" class="%router.chain.class%" />

        <!-- TODO: we should not put this here but document to put this into the main configuration.
             Then people could use this router without necessarily making it the main router
        -->
        <service id="router" alias="router.chain" />
    </services>
</container>

<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="symfony_cmf_routing.chain_router_class">Symfony\Cmf\Component\Routing\ChainRouter</parameter>
    </parameters>

    <services>
        <service id="symfony_cmf_routing.router" class="%symfony_cmf_routing.chain_router_class%">
            <argument type="service" id="logger" on-invalid="ignore" />
            <call method="setContext">
                <argument type="service" id="router.request_context" />
            </call>
        </service>
    </services>
</container>

<?xml version="1.0" encoding="UTF-8"?>
<parameters>
    <parameter key="symfony.cmf.content_router_class">Symfony\Cmf\Bundle\ChainRoutingBundle\Routing\ContentRouter</parameter>
    <parameter key="symfony.cmf.object_manager_id">doctrine.phpcr_odm.document_manager</parameter>
    <parameter key="symfony.cmf.controller_resolver_class">Symfony\Cmf\Bundle\ChainRoutingBundle\Routing\ContentRouter</parameter>
</parameters>

<services>

    <service id="symfony_cmf_object_manager" class="%symfony.cmf.controller_resolver_class%">
        <argument>%symfony_cmf_controllers_by_alias%</argument>
    </service>

    <service id="symfony_cmf_router" class="%symfony.cmf.content_router_class%">
        <argument type="service" id="%symfony.cmf.object_manager_id%"/>
        <argument type="service" id="symfony_cmf_controller_resolver"/>
    </service>
</services>
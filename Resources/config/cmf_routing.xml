<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="symfony_cmf_router.content_router_class">Symfony\Cmf\Bundle\ChainRoutingBundle\Routing\ContentRouter</parameter>
        <parameter key="symfony_cmf_router.object_manager_id">doctrine.phpcr_odm.default_document_manager</parameter>
        <parameter key="symfony_cmf_router.controller_resolver_class">Symfony\Cmf\Bundle\ChainRoutingBundle\Controller\ControllerResolver</parameter>
    </parameters>

    <services>

        <service id="symfony_cmf_router.controller_resolver" class="%symfony_cmf_router.controller_resolver_class%">
            <argument>%symfony_cmf_controllers_by_alias%</argument>
        </service>

        <service id="symfony_cmf_router.content_router" class="%symfony_cmf_router.content_router_class%">
            <tag name="router" priority="200" />
            <argument type="service" id="doctrine_phpcr.odm.default_document_manager" />
            <!--%symfony_cmf_router.object_manager_id%-->
            <argument type="service" id="symfony_cmf_router.controller_resolver"/>
        </service>
    </services>
</container>